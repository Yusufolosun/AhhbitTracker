    "verify:mainnet": "ts-node scripts/verify-mainnet.ts",
    "test:mainnet": "ts-node scripts/test-mainnet-transactions.ts",
    "stats": "ts-node scripts/contract-stats.ts",
    "query": "ts-node scripts/batch-query.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@stacks/clarinet-sdk": "^3.9.0",
    "@stacks/transactions": "^7.2.0",
    "@types/node": "^24.4.0",
    "chokidar-cli": "^3.0.0"
  },
  "devDependencies": {
    "vitest": "^2.1.8",
    "vitest-environment-clarinet": "^2.6.0"
  }
